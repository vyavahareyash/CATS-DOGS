    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/Untitled design (3).png" class="d-block w-100" alt="...">
            <div class="carousel-caption" style = "padding-top: 0px; padding-bottom: 0px;">

              <h5>Hi! My name is Max</h5>
              <p>I found my forever home. There are so many other pets just like me who need loving families.</p>  
                  <p><a href="#portfolio" class="btn btn-warning mt-3">Adopt Now</a></p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="images/Untitled design (4).png" class="d-block w-100" alt="...">
            <div class="carousel-caption">
              <h5>Hi! My name is Charlie</h5>
              <p>I found my family.</p>
                  <p> Be the one to adopt and bring joy to a furry friend's life</p>
                  <p><a href="#portfolio" class="btn btn-warning mt-3">Adopt Now</a></p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="images/Untitled design (5).png" class="d-block w-100" alt="...">
            <div class="carousel-caption">
              <h5>Hi! My name is Whiskers</h5>
                  <p>I'm a happy pet with a loving family. Give another pet the same chance.</p>
                  <p><a href="adoption.ejs" class="btn btn-warning mt-3">Adopt Now</a></p>
                  <!-- <p><a href="#portfolio" class="btn btn-warning mt-3">Adopt Now</a></p> -->
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
